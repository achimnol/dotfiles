[http]
	sslverify = true
[alias]
	st = status
	sw = switch
	pretty-log = log --branches --graph --tags --oneline --decorate
	unchanged = update-index --assume-unchanged
	changed = update-index --no-assume-unchanged
	show-unchanged = !"git ls-files -v | sed -e 's/^[a-z] //p; d'"
[init]
	defaultBranch = main
[user]
	name = {{username}}
	email = {{email}}
[color]
	ui = true
[core]
	autocrlf = false
	precomposeunicode = true
	quotepath = false
[push]
	default = simple
	followTags = true
[pull]
	rebase = true
%if _platform == "windows":
[credential]
	helper = wincred
%elif _platform == "mac":
[credential]
	helper = osxkeychain
%end
%if _platform == "linux":
[gpg]
	program = gpg2
%end

