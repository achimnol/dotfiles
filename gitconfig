[http]
	sslverify = true
[alias]
	st = status
	sw = switch
	pretty-log = log --branches --graph --tags --oneline --decorate
	changelog = log --pretty=format:'%C(yellow)%h %Cred%ad%Cgreen%d %Creset%s' --date=short
	unchanged = update-index --assume-unchanged
	changed = update-index --no-assume-unchanged
	show-unchanged = !"git ls-files -v | sed -e 's/^[a-z] //p; d'"
[init]
	defaultBranch = main
[user]
	name = {{username}}
	email = {{email}}
	signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIM/PuDDAG7IxR+25kwB3KnDSRmCpiqL3f3hMM85P6fER
[color]
	ui = true
[core]
	autocrlf = false
	precomposeunicode = true
	quotepath = false
[push]
	default = simple
	followTags = true
[pull]
	rebase = true
%if _platform == "windows":
[credential]
	helper = wincred
%elif _platform == "mac":
[credential]
	helper = osxkeychain
%end
[blame]
	ignoreRevsFile = .git-blame-ignore-revs
[commit]
	gpgsign = true
[gpg]
	format = ssh
[gpg "ssh"]
	allowedSignersFile = ~/.config/git/allowed_signers
